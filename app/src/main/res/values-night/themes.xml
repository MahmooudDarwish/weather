<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Dark Mode -->
    <style name="AppThemeDark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary and accent colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/light_primary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="materialButtonStyle">@style/MyMaterialButtonStyle</item>

        <!-- Switch styles -->
        <item name="switchStyle">@style/MySwitchStyle</item>

        <!-- Radio button styles -->
        <item name="radioButtonStyle">@style/MyRadioButtonStyle</item>

        <!-- CardView theme -->
        <item name="cardViewStyle">@style/MyCardStyle</item>
    </style>

    <!-- Button Styles -->
    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/dark_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- MaterialButton Styles -->
    <style name="MyMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/dark_primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="rippleColor">@color/accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Switch Styles -->
    <style name="MySwitchStyle" parent="Widget.Material3.CompoundButton.Switch">
        <item name="trackTint">@color/dark_primary</item>
        <item name="thumbTint">@color/primary</item>
    </style>

    <!-- Radio Button Styles -->
    <style name="MyRadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card Styles -->
    <style name="MyCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
