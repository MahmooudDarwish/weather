<resources>
            <!-- Base application theme -->
            <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
                <!-- Primary and accent colors -->
                <item name="colorPrimary">@color/primary</item>
                <item name="colorPrimaryDark">@color/dark_primary</item>
                <item name="colorAccent">@color/accent</item>

                <!-- Background -->
                <item name="android:colorBackground">@color/light_primary</item>
                <item name="colorOnPrimary">@color/white</item>

                <!-- Default text icons -->
                <item name="android:divider">@color/divider</item>

                <!-- Button styles -->
                <item name="buttonStyle">@style/MyButtonStyle</item>
                <item name="materialButtonStyle">@style/MyMaterialButtonStyle</item>

                <!-- Switch styles -->
                <item name="switchStyle">@style/MySwitchStyle</item>

                <!-- Radio button styles -->
                <item name="radioButtonStyle">@style/MyRadioButtonStyle</item>

                <!-- CardView theme -->
                <item name="cardViewStyle">@style/MyCardStyle</item>
            </style>

            <!-- Button Styles -->
            <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
                <item name="android:backgroundTint">@color/primary</item>
                <item name="android:textColor">@color/white</item>
                <item name="cornerRadius">8dp</item>
            </style>

            <!-- MaterialButton Styles -->
            <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
                <item name="backgroundTint">@color/primary</item>
                <item name="strokeColor">@color/dark_primary</item>
                <item name="rippleColor">@color/accent</item>
                <item name="cornerRadius">12dp</item>
                <item name="android:textColor">@color/white</item>
            </style>

            <!-- Switch Styles -->
            <style name="MySwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
                <item name="trackTint">@color/light_primary</item>
                <item name="thumbTint">@color/primary</item>
            </style>

            <!-- Radio Button Styles -->
            <style name="MyRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
                <item name="android:buttonTint">@color/primary</item>
                <item name="android:textSize">16sp</item>

            </style>

            <!-- Card Styles -->
            <style name="MyCardStyle" parent="Widget.MaterialComponents.CardView">
                <item name="cardCornerRadius">8dp</item>
                <item name="cardElevation">4dp</item>
                <item name="android:layout_margin">8dp</item>
            </style>
  <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>


